<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2>New book</h2>
      <%= render 'books/form', book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table book-show">
        <tr>
          <td>
            <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %><br />
            <%= link_to @user.name, user_path(@user) %></td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td>
            <div id="favorites_buttons_<%= @book.id %>">
            <%= render partial: 'favorites/favorite', locals: {book: @book} %>
            </div>
          </td>
          <td>コメント数：<%= @book.book_comments.count %></td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      </table>
      <%= render 'books/comment', book: @book,book_comment: @book_comment %>
    </div>
  </div>
</div>